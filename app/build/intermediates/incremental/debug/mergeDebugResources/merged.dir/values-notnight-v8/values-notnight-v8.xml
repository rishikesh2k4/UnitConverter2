<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Toolz</item>
        <item name="windowSplashScreenBackground">#0078D2</item>
        <item name="android:windowFullscreen">true</item>
        <item name="isLightTheme">false</item>
        <item name="android:windowSplashScreenBrandingImage" ns1:ignore="NewApi">
            @drawable/brand_logo_light
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        
        
    </style>
    <style name="Theme.Toolz" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">true</item>
        <item name="isLightTheme">false</item>
        <item name="android:windowLightNavigationBar" ns1:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>